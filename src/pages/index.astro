---
import MainLayout from "../layouts/MainLayout.astro";
import { getCollection } from "astro:content";
import projectsOrder from "../data/projects-order.json";

const allProjects = await getCollection("projects");

// Sort projects based on the order defined in projects-order.json
const projects = projectsOrder
  .map((slug) => allProjects.find((p) => p.slug === slug))
  .filter(Boolean); // Remove any undefined entries
---

<MainLayout
  title="Graham Dungan"
  description="Class of 26' Bachelors of Computer Science Howdy, I am a programmer who likes to make cool stuff."
>
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
      <!-- Header Section -->
      <div class="mb-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-3">Graham Dungan</h1>
        <p class="text-md text-text/60 dark:text-text-dark/60">
          Class of 26' Bachelors of Computer Science
        </p>
        <p class="text-lg text-text/80 dark:text-text-dark/80">
          Howdy, I am a programmer who likes to make cool stuff. This website is
          a catalogue of my favorite projects, my skills, and how to contact me.
        </p>
      </div>

      <!-- Main Content Grid -->
      <div class="md:grid md:grid-cols-[250px_1fr] md:gap-8">
        <!-- Quick Info Section -->
        <aside class="mb-8 md:mb-0">
          <div class="flex flex-col gap-4">
            <!-- Profile Image (hidden on mobile) -->
            <img
              src="/graham.jpeg"
              alt="Graham Dungan"
              class="hidden md:block w-full rounded-lg object-cover"
            />

            <!-- Contact Links -->
            <div class="flex md:flex-col gap-3">
              <a
                href="mailto:gwdungan@gmail.com"
                class="flex items-center gap-2 text-sm hover:opacity-80 transition-opacity focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-text dark:focus-visible:outline-text-dark rounded"
                aria-label="Email"
              >
                <svg
                  class="w-5 h-5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
                <span class="hidden md:inline">Email</span>
              </a>
              <a
                href="https://www.linkedin.com/in/graham-dungan-420943249/"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 text-sm hover:opacity-80 transition-opacity focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-text dark:focus-visible:outline-text-dark rounded"
                aria-label="LinkedIn"
              >
                <svg
                  class="w-5 h-5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                  ></path>
                </svg>
                <span class="hidden md:inline">LinkedIn</span>
              </a>
              <a
                href="https://github.com/gmgrahamgm"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 text-sm hover:opacity-80 transition-opacity focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-text dark:focus-visible:outline-text-dark rounded"
                aria-label="GitHub"
              >
                <svg
                  class="w-5 h-5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                  ></path>
                </svg>
                <span class="hidden md:inline">GitHub</span>
              </a>
            </div>
          </div>
        </aside>

        <!-- Projects List -->
        <div
          class="border-t border-b md:border-l border-text/20 dark:border-text-dark/20"
        >
          {
            projects.map((project, index) => (
              <a
                href={`/projects/${project.slug}`}
                class={`group flex gap-4 p-4 hover:bg-accent/50 dark:hover:bg-accent-dark/50 transition-colors focus-visible:outline-2 focus-visible:outline-offset-[-2px] focus-visible:outline-text dark:focus-visible:outline-text-dark ${
                  index !== projects.length - 1
                    ? "border-b border-text/10 dark:border-text-dark/10"
                    : ""
                }`}
                aria-label={`View ${project.data.title} project`}
              >
                <img
                  src={`/${project.data.thumbnail}`}
                  alt={project.data.title}
                  class="w-24 h-24 rounded object-cover flex-shrink-0"
                />
                <div class="flex-1 min-w-0">
                  <h2 class="text-xl font-bold mb-1 group-hover:opacity-80 transition-opacity">
                    {project.data.title}
                  </h2>
                  <p class="text-sm text-text/60 dark:text-text-dark/60 mb-2">
                    {project.data.date}
                  </p>
                  <p class="text-sm line-clamp-2">{project.data.summary}</p>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
