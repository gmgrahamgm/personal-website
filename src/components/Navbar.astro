---
const currentPath = Astro.url.pathname;
---

<nav class="fixed top-0 left-0 right-0 bg-background dark:bg-background-dark border-b border-accent dark:border-accent-dark z-50">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Name -->
      <a href="/" class="text-xl font-bold hover:opacity-80 transition-opacity">
        Graham Dungan
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a 
          href="/" 
          class={`hover:opacity-80 transition-opacity focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-text dark:focus-visible:outline-text-dark rounded ${currentPath === '/' ? 'font-semibold' : ''}`}
        >
          Home
        </a>
        <a 
          href="/projects" 
          class={`hover:opacity-80 transition-opacity focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-text dark:focus-visible:outline-text-dark rounded ${currentPath.startsWith('/projects') ? 'font-semibold' : ''}`}
        >
          Projects
        </a>
        <a 
          href="/skills" 
          class={`hover:opacity-80 transition-opacity focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-text dark:focus-visible:outline-text-dark rounded ${currentPath === '/skills' ? 'font-semibold' : ''}`}
        >
          Skills
        </a>
        <a 
          href="/about" 
          class={`hover:opacity-80 transition-opacity focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-text dark:focus-visible:outline-text-dark rounded ${currentPath === '/about' ? 'font-semibold' : ''}`}
        >
          About
        </a>
        <a 
          href="/resume" 
          class={`hover:opacity-80 transition-opacity focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-text dark:focus-visible:outline-text-dark rounded ${currentPath === '/resume' ? 'font-semibold' : ''}`}
        >
          Resume
        </a>
        
        <!-- Theme Toggle -->
        <button 
          id="theme-toggle" 
          class="p-2 rounded-lg hover:bg-accent dark:hover:bg-accent-dark transition-colors focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-text dark:focus-visible:outline-text-dark"
          aria-label="Toggle theme"
        >
          <svg id="sun-icon" class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"/>
          </svg>
          <svg id="moon-icon" class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
          </svg>
        </button>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button" 
        class="md:hidden p-2 rounded-lg hover:bg-accent dark:hover:bg-accent-dark transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-4">
        <a 
          href="/" 
          class={`hover:opacity-80 transition-opacity ${currentPath === '/' ? 'font-semibold' : ''}`}
        >
          Home
        </a>
        <a 
          href="/projects" 
          class={`hover:opacity-80 transition-opacity ${currentPath.startsWith('/projects') ? 'font-semibold' : ''}`}
        >
          Projects
        </a>
        <a 
          href="/skills" 
          class={`hover:opacity-80 transition-opacity ${currentPath === '/skills' ? 'font-semibold' : ''}`}
        >
          Skills
        </a>
        <a 
          href="/about" 
          class={`hover:opacity-80 transition-opacity ${currentPath === '/about' ? 'font-semibold' : ''}`}
        >
          About
        </a>
        <a 
          href="/resume" 
          class={`hover:opacity-80 transition-opacity ${currentPath === '/resume' ? 'font-semibold' : ''}`}
        >
          Resume
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Theme toggle functionality
  const themeToggle = document.getElementById('theme-toggle');
  
  themeToggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });
  
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
