---
import BaseLayout from './BaseLayout.astro';
import Navbar from '../components/Navbar.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-text focus:text-background dark:focus:bg-text-dark dark:focus:text-background-dark focus:rounded">
    Skip to main content
  </a>
  <Navbar />
  <main id="main-content" class="min-h-screen pt-20">
    <slot />
  </main>
  <footer class="bg-accent dark:bg-accent-dark py-8 mt-16">
    <div class="container mx-auto px-4 text-center text-sm">
      <p>&copy; {new Date().getFullYear()} Graham Dungan. All rights reserved.</p>
    </div>
  </footer>
</BaseLayout>
